{% extends "@bootstrap_barrio/layout/page.html.twig" %}

{% block content %}
  <div class="{{ container }} mt-4">

    <!-- Breadcrumb -->
    {{ page.breadcrumb }}

    <header class="row mb-4">
      <div class="col-12 text-center">
        <h1 class="display-4">Mormhona</h1>
        <p class="lead">My Drupal subtheme!</p>
      </div>
    </header>

    <!-- Articles Section -->
    <section class="row mb-4">
      <div class="col-12">
        <h2 class="mb-3">Featured Articles</h2>
      </div>

      {% for nid in [1, 2, 3, 4] %}
        <div class="col-md-6 mb-4">
          <article class="card h-100">
            <div class="card-body">
              {{ drupal_entity('node', nid, 'teaser') }}
            </div>
          </article>
        </div>
      {% endfor %}
    </section>

    <!-- More Articles -->
    <section class="row mb-4">
      <div class="col-12">
        <h2 class="mb-3">Latest</h2>
      </div>

      {% for nid in [5, 6, 7, 8] %}
        <div class="col-md-6 mb-4">
          <article class="card h-100">
            <div class="card-body">
              {{ drupal_entity('node', nid, 'teaser') }}
            </div>
          </article>
        </div>
      {% endfor %}
    </section>

    <!-- Sidebar Area -->
    <aside class="row">
      <div class="col-md-4">
        <h3 class="mb-3">More...</h3>

        {% for nid in [9, 10] %}
          <div class="mb-4">
            {{ drupal_entity('node', nid, 'teaser') }}
          </div>
        {% endfor %}
      </div>
    </aside>

  </div>
{% endblock %}

